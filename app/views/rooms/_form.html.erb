<section class="container flex flex-col md:mx-64 sm:mx-32">
  <%= form_with(model: room) do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :title, class: "shadow appearance-none border-0 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter room title" %>
    </div>

    <%= form.submit "Create Room", class: "rounded-xl cursor-pointer inline-block font-medium italic px-4 py-2 border-theme-aqua border-2 text-theme-grey-700 rounded hover:bg-theme-aqua", style: "float: right;" %>

    <% if room.errors.any? %>
      <div class="text-red-500 mt-3">
        <h2 class="text-sm"><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

        <ul>
          <% room.errors.each do |error| %>
            <li class="text-xs">- <%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</section>