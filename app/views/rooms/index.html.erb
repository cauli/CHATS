<% if notice %>
  <div class="fixed bottom-4 right-4 bg-white shadow-lg p-4 rounded-lg">
    <%= notice %>
  </div>
<% end %>

<section id="header" class="flex flex-col mt-24">

  <div class="flex flex-row items-center justify-between w-full">
    
    <h1 class="<%= tailwind_header_class(:dark) %>">My rooms</h1>
    <%= link_to "Create new room", new_room_path, class: "rounded-xl inline-block font-medium italic px-4 py-2 border-theme-aqua border-2 text-theme-grey-700 rounded hover:bg-theme-aqua" %>
  </div>
  <p class="mt-4 text-theme-grey-500 w-1/2 text-sm">Rooms are <span class="italic">public and anyone can join them</span>. This text is here just to show a bit more interesting layout. Don't mind me.</p>
</section>

<section id="rooms" class="flex flex-row mt-9 items-start justify-center">
  <% @rooms.each do |room| %>
    <%= link_to room.title, room, class: "rounded-2xl transition-all duration-75 bg-white ease-in aspect-4 mx-1 font-medium min-w-[64px] px-2 py-4 py-2 text-center hover:bg-theme-greeny shadow-greeny hover:outline-0 shadow-sm text-theme-grey-500 p-2 mb-2"  %>
  <% end %>

  <% if @rooms.empty? %>
    <p class="text-theme-grey-500 text-center italic">No rooms yet. <%= link_to "Create one", new_room_path, class: "rounded-md px-2 py-1 inline-block font-medium italic border-2 border-theme-aqua text-theme-grey-700" %>?</p>
  <% end %>
</section>


<div class="fixed bottom-4 left-4">
  <%= link_to "Sign out?", destroy_session_path %>
</div>
